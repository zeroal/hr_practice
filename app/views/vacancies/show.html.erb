<div class="wrapper">

	<section>
	 <!-- START Page content-->
	 <div class="main-content">
	    <h3><%= @vacancy.title %>
	       <br>
	       <small><%= @vacancy.department.name %></small>
	    </h3>
	    <div class="row">
	       <div class="col-lg-12">
	          <p><%= @vacancy.description %></p>
	       </div>
	    </div>
	    <% if @applied %>
	    	<p class="btn btn-info btn-sm">Already Applied</p>
	    <% else %>
	    	<%= link_to "Apply",vacancy_path(@vacancy), remote: true, method: :post, id:'apply' , class: 'btn btn-info btn-sm' %>
	    <% end%>
	 </div>
	 <!-- END Page content-->
	 <!-- START Page footer-->
	 <footer>&copy; 2014 - Wintermin</footer>
	 <!-- END Page Footer-->
	</section>
</div>