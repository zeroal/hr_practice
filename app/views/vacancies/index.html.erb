<div class="wrapper">
  <section>
         <!-- START Page content-->
         <div class="main-content">
            <h3>Search
               <br>
               <small>Search and filter results</small>
            </h3>
            <div class="row">
               <div class="col-lg-9">
                  <div class="form-group mb-xl">
                     <input type="text" placeholder="Search job" class="form-control mb">
                     <div class="clearfix">
                        <button type="button" class="pull-left btn btn-default">Search</button>
                     </div>
                  </div>
                  <!-- START panel-->
                  <div class="panel panel-default">
                     <div class="panel-heading">Search Results
                     </div>
                     <!-- START table-responsive-->
                     <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                           <thead>
                              
                           </thead>
                           <tbody>
                           <% @vacancies.each do |vacancy| %>   
                              <tr>
                                 <td>
                                    <div class="media">
                                       <a href="#" class="pull-left">
                                          <img src="app/img/dummy.png" alt="" class="media-object img-responsive img-rounded thumb64">
                                       </a>
                                       <div class="media-body">
                                          <%= link_to "View", vacancy_path(vacancy), :class => 'pull-right btn btn-info btn-sm'  %>
                                          <h4 class="media-heading"><%= vacancy.title %></h4>
                                          <p>
                                             <small><%= vacancy.department.name %></small>
                                          </p>
                                          <%= vacancy.description %></div>
                                    </div>
                                 </td>
                              </tr>
                           <% end %>   
                           </tbody>
                        </table>
                     </div>
                     <!-- END table-responsive-->
                  </div>
                  <!-- END panel-->
               </div>
               
            </div>
         </div>
         <!-- END Page content-->
         <!-- START Page footer-->
         <footer>&copy; 2014 - Wintermin</footer>
         <!-- END Page Footer-->
      </section>
  </div>

  